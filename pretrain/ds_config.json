{
  "train_batch_size": 144,
  "train_micro_batch_size_per_gpu": 24,
  "gradient_accumulation_steps": 6,
  "optimizer": {
    "type": "AdamW",
    "params": {
        "lr": 1e-4,
        "betas": [0.9, 0.999],
        "eps": 1e-7,
        "weight_decay": 1e-2
    }
  },
  "scheduler": {
    "type": "WarmupCosineLR",
    "params": {
      "total_num_steps": 37256,
      "warmup_min_ratio": 0.0,
      "warmup_num_steps": 1000,
